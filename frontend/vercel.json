{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "redirects": [
    {
      "source": "https://openwall.com.tr/(.*)",
      "destination": "https://www.openwall.com.tr/$1",
      "permanent": true
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "https://ecnn-backend.vercel.app/sitemap.xml",
      "headers": { "Content-Type": "application/xml; charset=utf-8" }
    },
    {
      "src": "/robots.txt",
      "dest": "https://ecnn-backend.vercel.app/robots.txt",
      "headers": { "Content-Type": "text/plain; charset=utf-8" }
    },

    { "src": "^/o/(.*)$", "dest": "/api/o/$1" },

    { "src": "/(.*\\.(png|jpg|jpeg|gif|webp|svg|ico|css|js|json|xml|txt|woff|woff2|ttf|eot))", "dest": "/$1" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
